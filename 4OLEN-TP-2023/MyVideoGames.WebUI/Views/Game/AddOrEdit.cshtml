@model AddOrEditGameViewModel

<form method="post" asp-action="AddOrEdit" asp-controller="Game">
    <div asp-validation-summary="All"></div>
    <input asp-for="GameToAddOrEdit.Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.Name"></label>
        <input asp-for="GameToAddOrEdit.Name" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.PlayTime"></label>
        <input asp-for="GameToAddOrEdit.PlayTime" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.PlayTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.Rating"></label>
        <input asp-for="GameToAddOrEdit.Rating" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.Rating"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.RatingTop"></label>
        <input asp-for="GameToAddOrEdit.RatingTop" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.RatingTop"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.ReleaseDate"></label>
        <input asp-for="GameToAddOrEdit.ReleaseDate" class="form-control" type="date"/>
        <span asp-validation-for="GameToAddOrEdit.ReleaseDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.Slug"></label>
        <input asp-for="GameToAddOrEdit.Slug" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.Slug"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.Description"></label>
        <input asp-for="GameToAddOrEdit.Description" class="form-control" />
        <span asp-validation-for="GameToAddOrEdit.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAddOrEdit.Platform.Name"></label>
        <select asp-for="GameToAddOrEdit.PlatformId" asp-items="@Model.PlatformsAvailable" class="form-control"></select>
        <span asp-validation-for="GameToAddOrEdit.Platform.Name"></span>
    </div>
    <input asp-for="GameToAddOrEdit.Id" type="hidden" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}